<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">


   <Button
       android:id="@+id/btnRecycler1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Recycler 1"
        />

   <Button
       android:id="@+id/btnTourism"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/btnRecycler1"
       android:layout_marginTop="16dp"
       android:text="Tourism"
        />

   <Button
       android:id="@+id/btnrestAPI"
       android:layout_below="@id/btnTourism"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       android:text="Rest API"

        />
</RelativeLayout>